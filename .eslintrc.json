{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "ignorePatterns": ["icons/**", "node_modules/**"],
  "rules": {
    "no-unused-vars": ["warn", { "args": "none" }],
    "no-constant-condition": ["off"],
    "no-console": ["off"]
  }
}

